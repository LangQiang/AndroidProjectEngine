<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="25dp"
        android:paddingRight="15dp"
        android:paddingBottom="22dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black80"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="即将开始注销" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black60"
            android:textSize="14dp"
            tools:text="首次发布节目需先入驻为平台主播 放到对方首次发布节目需先入驻为平台主播 放到对方首次发布节目需先入驻为平台主播 放到对方" />

        <LinearLayout
            android:id="@+id/ll_twobutton_rootview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/base_shape_f5f5f5_25_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="取消"
                android:textColor="@color/black80"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/base_shape_black_25_bg"
                android:gravity="center"
                android:singleLine="true"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_single_click"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/base_shape_black_25_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>