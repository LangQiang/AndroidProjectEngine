<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    
     <TextView
         android:id="@+id/pull_refresh_text"
         android:minWidth="120dp"
         android:layout_width="wrap_content"
         android:layout_height="20dp"
         android:layout_centerInParent="true"
         android:text="下拉刷新"
         android:textColor="@color/skin_title_color"
         android:textSize="16dp"
         skin:enable="true"
         android:gravity="center_horizontal"/>

    <ProgressBar
        android:id="@+id/pull_refresh_progress"
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/pull_refresh_text"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyleSmall" />

    <ImageView
        android:id="@+id/pull_refresh_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/pull_refresh_text"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/pullrefresh_down_arrow"
        skin:enable="true"/>



</RelativeLayout>